<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/tax_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"

        android:layout_marginRight="8dp"
        />


    <TextView
        android:id="@+id/tax_card_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="interst payment"
        android:layout_marginRight="8dp"



        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="78dp"

        />

    <TextView
        android:id="@+id/tax_card_taxConsequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tax consequence"
        android:layout_marginRight="8dp"



        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/tax_card_netGain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="net gain"
        android:layout_marginRight="8dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="261dp"
        />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>