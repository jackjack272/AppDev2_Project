<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card 1 -->
        <LinearLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tax_card_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tax_card_netGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Gain"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <!-- Spacing -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Card 2 -->
        <LinearLayout
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tax_card_interest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Interest Payment"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tax_card_taxConsequence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax Consequence" />

        </LinearLayout>

        <!-- Add more cards or adjust spacing as needed -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
